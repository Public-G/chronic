<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.github.chronic.pojo.Policy" table="tb_policy" >
		<!-- 建立类中的属性与表中的主键对应 -->
		<id name="plid" column="plid">
			<!-- 主键生成策略 -->
			<generator class="native" />
		</id>

		<!-- 建立类中的普通的属性和表的字段的对应 -->
		<property name="year"/>
		<property name="capline"/>
		<property name="scale"/>

	</class>
</hibernate-mapping>
